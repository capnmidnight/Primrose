doctype html
html
  head
    meta(charset="utf-8")
    block viewport
      meta(name="viewport", content="width=device-width, initial-scale=1.0")

    meta(name="web-app-capable", content="yes")
    meta(name="theme-color", content="black")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")

    meta(name="description", content="A WebVR application framework.")
    meta(name="keywords", content="WebGL, WebVR, HTML5, JavaScript, text editor, source code editor, virtual reality, Primrose")

    meta(property="og:type", content="website")
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:site", content="@Primrose_VR")

    meta(property="og:site_name", content="Primrose VR")

    meta(property="og:description", content="Primrose: Framework for WebVR Applications")
    meta(name="twitter:description", content="Primrose: Framework for WebVR Applications")
    meta(property="og:url", content="http://www.primrosevr.com/" + filePath)

    <!-- start main.jade meta block -->
    block meta
      meta(name="twitter:image", content="http://www.primrosevr.com/images/screenshot.jpg")
      meta(property="og:image", content="http://www.primrosevr.com/images/screenshot.jpg" )
    <!-- end main.jade meta block -->

    <!-- start main.jade title block -->
    block title
      meta(property="og:title", content="Primrose VR: WebVR Application Framework")
      meta(name="twitter:title", content="Primrose VR: WebVR Application Framework")
      title Primrose VR: WebVR Application Framework
    <!-- end main.jade title block -->

    block head
  body

    header(role="banner")
      a#logo(href= fileRoot)
        img(src= fileRoot + "doc/images/primrose32.png", alt="logo", title="Primrose logo")

      nav(role="navigation")
        ul
          li: a(href= fileRoot + "doc/") Docs
          li: a(href= fileRoot + "doc/faq.html") FAQ
          li: a(href= fileRoot + "community/") Community
          li: a(href="https://github.com/capnmidnight/Primrose/", target="_blank") Github

    <!-- start main.jade banner block -->
    block banner
    <!-- end main.jade banner block -->

    <!-- start main.jade main block -->
    block main
    <!-- end main.jade main block -->

    <!-- start main.jade footer block -->
    footer
      #footerWrapper
        nav
          ul
            li: a(href="../doc/about.html") About
            li: a(href="../doc/#LICENSE.md") License
            li: a(href="../doc/#CHANGELOG.md") Changelog
            li: a(href="https://notiontheory.slack.com", target="_blank") Slack
            li: a(href="http://www.notiontheory.com", target="_blank", style="color:#ec2471") Made (with love) by NotionTheory
        a.icon.github(href="https://www.github.com/NotionTheory/Primrose", target="_blank") &nbsp;
        a.icon.twitter(href="https://www.twitter.com/Primrose_VR", target="_blank") &nbsp;
      block footer
    <!-- end main.jade footer block -->
