//- see https://github.com/pugjs/pug/issues/1589

-var ajax = true

-if( ajax )
    //- return only contents if ajax requests
    block contents
        p ajax contents

-else
    //- return all html
    doctype html
    html
        head
            meta( charset='utf8' )
            title sample
            body
                block contents
                    p all contetns
